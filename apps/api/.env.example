# Server Configuration
PORT=3001

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/sl3_beta

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRES_IN=1d

# Logging
LOG_LEVEL=debug

# Redis Configuration (pour le chat)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=sl3_redis_password
REDIS_DB=0

# WebSocket Configuration
WS_PORT=3002
WS_PATH=/chat
WS_NAMESPACE=chat

# Bull Queue Configuration
BULL_QUEUE_NAME=chat
BULL_QUEUE_PREFIX=sl3_beta
BULL_QUEUE_LIMITER_MAX=1000
BULL_QUEUE_LIMITER_DURATION=60000

# Chat Configuration
CHAT_MESSAGE_LIMIT=50
CHAT_RATE_LIMIT=5
CHAT_HISTORY_DAYS=30

# Monitoring Configuration
MONITOR_ENABLED=true
MONITOR_METRICS_PORT=9090
MONITOR_HEALTH_PORT=9091

# Clustering Configuration (optionnel)
CLUSTER_ENABLED=false
CLUSTER_NODES=[]
CLUSTER_RETRY_DELAY=2000
CLUSTER_RETRY_ATTEMPTS=5

# Frontend URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# File Upload
UPLOAD_DIR=public/uploads
